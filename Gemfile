source "https://rubygems.org"

# GitHub Pages gem - matches GitHub Pages build environment
gem "github-pages", "~> 232", group: :jekyll_plugins

# webrick for local development server (required for Ruby 3.0+)
gem "webrick", "~> 1.8"

# Silence Ruby 4.0 deprecation warning about fiddle
gem "fiddle"

# Faraday v2 retry middleware
gem "faraday-retry"

# Windows file watcher (avoids polling for changes)
gem "wdm", ">= 0.1.0", platforms: [:windows]
